<div>
  <h2>User info</h2>
    <%= image_tag user.get_profile_image, size: "63x63"%>
    <table>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>

      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>

    </table>

    <div>
      <%= link_to "user-edit", edit_user_path(current_user) %>
    </div>
</div>

<div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div>
      <label>Opinion</label>
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>