<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>

      <%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>

        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, autofocus: true, :class => 'form-control book_title' %>
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body, autofocus: true, :class => 'form-control book_body' %>
        </div>

        <div class="form-group">
          <%= f.submit "Update Book", :class => 'btn btn-success' %>
        </div>

      <% end %>

      <div>
        <span><%= link_to "Show", book_path %></span> | <span><%= link_to "Back", books_path %></span>
      </div>
    </div>
  </div>
</div>