<div>
  <h2>Editing Book</h2>

  <%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>
    <label>Title</label>
    <%= f.text_field :title, autofocus: true %>

    <label>Opinion</label>
    <%= f.text_area :body, autofocus: true %>

    <%= f.submit "Update Book" %>
  <% end %>

  <div>
    <p><%= link_to "Show", book_path %></p>|<p><%= link_to "Back", books_path %></p>
  </div>
</div>